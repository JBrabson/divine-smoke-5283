<h1>The Place of Plots</h1>
<br>
<% @plots.each do |plot| %>
  <section id="plot-<%= plot.id %>">
  <p>.....................................</p>
  <h3> <%= "Plot Number: #{plot.number}" %> </h3>
    <p>Growing Here:</p> <% plot.plants.each do |plant| %>
    <section id="plant-<%= plant.id %>">
      <%= plant.name %> <%= link_to "Send This Plant Packin' (Remove This Plant)", "/plots/#{plot.id}/plants/#{plant.id}", method: :delete %>
    </section>
    <% end %>
  </section>
  <% end %>
